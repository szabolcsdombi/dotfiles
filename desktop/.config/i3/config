bindsym Mod4+Return exec --no-startup-id kitty
bindsym Mod4+Shift+Return exec --no-startup-id google-chrome-stable
bindsym Mod4+space exec --no-startup-id dmenu_run
bindsym Mod4+f fullscreen toggle
bindsym Mod4+q kill

bindsym Mod4+y exec --no-startup-id flameshot gui

bindsym Mod4+equal workspace next
bindsym Mod4+minus workspace prev

bindsym Mod4+Shift+equal exec --no-startup-id pamixer -i 5
bindsym Mod4+Shift+minus exec --no-startup-id pamixer -d 5

